@model TimeAttendance.Model.OrganizationInformationModel
@{
    ViewBag.Title = "تنظیمات | اطلاعات سازمان";
    Layout = "~/Areas/TimeAttendance/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_AccessControll")

<link href="~/wwwroot/componenets/datatableajax/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/wwwroot/componenets/global/global.css" rel="stylesheet" />


<div class="row">

    <div class="col-sm-12">
        <div class="card card-topline-red">
            <div class="card-head">
                <header>ثبت / ویرایش</header>
            </div>
            <div class="card-body ">

                @if (!string.IsNullOrEmpty(Model.Message) && Model.Message.Length > 0)
                {
                    <div class="alert alert-success w100 pull-right">
                        اطلاعات با موفقیت بروزرسانی شد.
                    </div>
                }
                else
                {
                    <form method="post" resource="/TimeAttendance/EducationLevel/Index" enctype="multipart/form-data">

                        <div id="AddOrUpdate-Part">

                            @if (!string.IsNullOrEmpty(Model.Errors) && Model.Errors.Length > 0)
                            {
                                <div class="alert alert-danger w100 pull-right">
                                    @(Model.Errors)
                                </div>
                            }


                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(x => x.Id)

                            <div class="form-group w100">
                                @Html.LabelFor(x => x.Title, new { @class = "pull-right" })<label class="required">*</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", MaxLength = "75" })
                                @Html.ValidationMessageFor(x => x.Title, null, new { @class = "validation" })
                            </div>

                            <div class="form-group w100">
                                @Html.LabelFor(x => x.Category, new { @class = "pull-right" })<label class="required">*</label>
                                @Html.TextBoxFor(x => x.Category, new { @class = "form-control", MaxLength = "75" })
                                @Html.ValidationMessageFor(x => x.Category, null, new { @class = "validation" })
                            </div>

                            <div class="form-group w100">
                                @Html.LabelFor(x => x.Address, new { @class = "pull-right" })<label class="required">*</label>
                                @Html.TextBoxFor(x => x.Address, new { @class = "form-control", MaxLength = "150" })
                                @Html.ValidationMessageFor(x => x.Address, null, new { @class = "validation" })
                            </div>

                            <div class="form-group w100">
                                @Html.LabelFor(x => x.Phone, new { @class = "pull-right" })<label class="required">*</label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control numeric", MaxLength = "11" })
                                @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "validation" })
                            </div>


                            <div class="form-group w100">
                                @Html.LabelFor(x => x.Image, new { @class = "pull-right" })<label class="required">*</label>
                                <input type="file" name="LogoPath" id="LogoPath" value="@(Model.LogoPath)" class="form-control" />
                                <img id="uploadedlogoimage" src="@(Model.LogoPath)" />
                            </div>



                            <button type="submit" onclick="AddLoading()" class="btn btn-success btn-sm pull-left">ثبت / ویرایش</button>
                        </div>
                    </form>
                }


            </div>
        </div>
    </div>

</div>




@section scripts
{
    <script src="~/wwwroot/componenets/unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/wwwroot/componenets/global/global.js"></script>
}
