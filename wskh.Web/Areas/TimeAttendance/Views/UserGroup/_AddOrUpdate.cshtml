@model wskh.Model.UserGroupModel
@{
    Layout = null;
}

@Html.AntiForgeryToken()
@Html.HiddenFor(x => x.Id)


<div class="row">

    <div class="form-group pull-right col-md-12">
        @Html.LabelFor(x => x.Title, new { @class = "pull-right" })<label class="required">*</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", MaxLength = "50" })
        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "validation" })
    </div>

</div>

<br />

<div class="alert alert-danger col-12" id="mobileExistAlarm" style="display:none;">
    شماره همراه موجود میباشد.
</div>

<br />

<div class="row">
    <button type="submit" onclick="AddLoading()" id="submit" class="btn btn-success btn-sm pull-left">ثبت / ویرایش</button>
</div>

