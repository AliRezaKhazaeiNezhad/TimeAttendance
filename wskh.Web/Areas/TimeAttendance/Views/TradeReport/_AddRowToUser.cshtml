@model TimeAttendance.Model.AddTradeModel
@{
    var userService = DependencyResolver.Current.GetService<wskh.Service.IUserService>();
    var user = userService.GetList.FirstOrDefault(x => x.Id == Model.UserId);
}
<br />
<hr />
<br />



<div id="TradeList">

    @Html.HiddenFor(x => x.ReportDayId)
    <input type="text" name="UserIds" id="UserIds" value="@(Model.UserId)" hidden/>

    <div class="form-group w100 col-md-3">
        <label class="pull-right" for="EnteranceTime">زمان ورود</label><label class="required">*</label>
        @Html.TextBoxFor(x => x.EnteranceTime, new { @class = "form-control", MaxLength = "5", placeholder="08:00", value="08:00" })
        @Html.ValidationMessageFor(x => x.EnteranceTime, null, new { @class = "validation" })
    </div>
    <div class="form-group w100 col-md-3">
        <label class="pull-right" for="EnteranceTime">زمان خروج</label><label class="required">*</label>
        @Html.TextBoxFor(x => x.ExitTime, new { @class = "form-control", MaxLength = "5" , placeholder="15:00", value="15:00"})
        @Html.ValidationMessageFor(x => x.ExitTime, null, new { @class = "validation" })
    </div>
    <div class="form-group w100 col-md-3">
        <button type="button" id="AddTradeBTN" onclick="AddTrades()" class="btn btn-success btn-sm pull-left" style="margin-top: 35px;">ثبت</button>
    </div>

</div>


<br />



<script src="~/wwwroot/componenets/mask/jquery.inputmask.bundle.js"></script>
<script>
    $(function () {

        $('input[id$="EnteranceTime"]').inputmask(
            "hh:mm", {
                placeholder: "08:00",
                insertMode: false,
                showMaskOnHover: false,
                hourFormat: "24"
            }
        );
        $('input[id$="ExitTime"]').inputmask(
            "hh:mm", {
                placeholder: "15:00",
                insertMode: false,
                showMaskOnHover: false,
                hourFormat: "24"
            }
        );
    });

</script>