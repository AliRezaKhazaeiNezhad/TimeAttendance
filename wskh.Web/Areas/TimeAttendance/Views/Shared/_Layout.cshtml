<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta name="description" content="تم مدیریتی راستچین" />
    <meta name="author" content="Ali Reza Khazaei Nezhad" />
    <title>@(ViewBag.Title)</title>
    @Styles.Render("~/Content/Theme2")


    <link rel="shortcut icon" href="~/wwwroot/dashboard/img/128.png" />
    <script src="~/wwwroot/Dashboard_V2/assets/plugins/jquery/jquery.min.js"></script>

</head>

<body class="page-header-fixed sidemenu-closed-hidelogo page-content-white page-md sidemenu-container-reversed header-white white-sidebar-color logo-indigo" style="overflow-x:scroll">

    @Html.Partial("_Loading")

    <div class="page-wrapper">
        <!-- start header -->

        @Html.Partial("_HorizontalMenu")
        <div class="page-container">


            @Html.Partial("_VerticalMenu")



            <div class="page-content-wrapper">
                <div class="page-content">
                    @RenderBody()
                </div>
            </div>
        </div>
        @*@Html.Partial("_Footer")*@
    </div>


    <script src="~/wwwroot/componenets/datatableajax/jquery.dataTables.js"></script>
    @Scripts.Render("~/bundles/Theme2")
    @RenderSection("scripts", required: false)
    <script>
        ReomveLoading();
    </script>
</body>
</html>