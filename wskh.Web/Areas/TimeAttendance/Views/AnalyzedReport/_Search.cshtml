@model TimeAttendance.Model.AnalyzedReportModel
@{
    Layout = null;
}
<link href="~/wwwroot/componenets/persiancalendar/js-persian-cal.css" rel="stylesheet" />

@Html.AntiForgeryToken()




<div class="row">
    <div class="form-group pull-right col-md-2">
        @Html.LabelFor(x => x.UserGroupId, new { @class = "pull-right" })<label class="required">*</label>
        @Html.DropDownListFor(x => x.UserGroupId, Model.UserGroupList, new { @class = "form-control", onchange = "SelectUsers()" })
        @Html.ValidationMessageFor(x => x.UserGroupId, null, new { @class = "validation" })
    </div>
    <div class="form-group pull-right col-md-2" id="UserListDropPart">

        @Html.LabelFor(x => x.UserId, new { @class = "pull-right" })<label class="required">*</label>
        <select class="form-control" id="UserId" name="UserId" autocomplete="off">
            @Html.Action("GetDrop", new { usergroupId = 0 })
        </select>
    </div>
    <div class="form-group pull-right col-md-2">
        @Html.LabelFor(x => x.StartDatePersian, new { @class = "pull-right" })<label class="required">*</label>
        @Html.TextBoxFor(x => x.StartDatePersian, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.StartDatePersian, null, new { @class = "validation" })
    </div>
    <div class="form-group pull-right col-md-2">
        @Html.LabelFor(x => x.EndDatePersian, new { @class = "pull-right" })<label class="required">*</label>
        @Html.TextBoxFor(x => x.EndDatePersian, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.EndDatePersian, null, new { @class = "validation" })
    </div>

    <div class="form-group pull-left col-md-2">
        <button type="button" onclick="Search()" id="submitBTN" class="btn btn-success btn-sm pull-left padding-top-btn" style="width:100%">جستجو</button>
    </div>
    <div class="form-group pull-left col-md-2">
        <button type="button" onclick="PrintPDF()" class="btn btn-default btn-sm pull-left" style="position: relative;top: 38px;float: left;width:100%">چاپ <i class="fa fa-copy"></i></button>
    </div>
</div>






<script src="~/wwwroot/componenets/persiancalendar/js-persian-cal.min.js"></script>
<script type="text/javascript">
    var objCal1 = new AMIB.persianCalendar('StartDatePersian');
    var objCal2 = new AMIB.persianCalendar('EndDatePersian');
</script>





