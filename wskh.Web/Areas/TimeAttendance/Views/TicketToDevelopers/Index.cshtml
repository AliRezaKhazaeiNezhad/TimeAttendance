
@{
    ViewBag.Title = "تیکت | تیکت به مدیر";
    Layout = "~/Areas/TimeAttendance/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_AccessControll")

<link href="~/wwwroot/componenets/datatableajax/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/wwwroot/componenets/global/global.css" rel="stylesheet" />


<div class="row">

    <div class="col-12">
        <div class="card card-topline-red">
            <div class="card-head">
                <header>تیکت به شرکت نرم افزاری</header>
            </div>
            <div class="card-body ">
                <div id="AddOrUpdate-Part">

                    <br />

                    <div class="form-group w100" id="hiddenPart" style="display:none">

                        <div class="alert alert-success" id="success">
                            ضمن تشکر از پیام جنابعالی،پیام شما با موفقیت برای تیم برنامه نویسی ارسال شد. بزودی بررسی و با شما تماس گرفته میشود.
                        </div>


                        <div class="alert alert-warning" id="error">
                            متاسفانه خطایی رخ داده است. درصورت ضرورت با شماره 09155575098 آقای علیرضا خزاعی نژاد مدیر برنامه نویسی تماس حاصل نمایید
                        </div>

                    </div>

                    <div id="showPart">
                        <div class="form-group w100 col-md-3">
                            <select class="form form-control" id="CategoryId">
                                <option value="انتقاد و پیشنهادات">انتقاد و پیشنهادات</option>
                                <option value="باگ و مشکلات فنی نرم افزار">باگ و مشکلات فنی نرم افزار</option>
                                <option value="موارد دیگر">موارد دیگر</option>
                            </select>
                        </div>



                        <div class="form-group w100">
                            <textarea type="text" class="form form-control" id="Description"></textarea>
                        </div>


                        <button type="button" onclick="ResponseToId()" class="btn btn-success btn-sm pull-left">ارسال</button>
                    </div>


                </div>
            </div>
        </div>
    </div>

</div>




@section scripts
{
    <script src="~/wwwroot/componenets/global/global.js"></script>
    <script>

        function ResponseToId() {
            AddLoading();
            $.ajax({
                url: "/TimeAttendance/TicketToDevelopers/Response",
                data: {
                    categoryId: $("#CategoryId").val(),
                    description: $("#Description").val()
                },
                type: 'post',
                dataType: "json",
                success: function (data) {
                    ReomveLoading();
                    $("#hiddenPart").show();
                    $("#showPart").hide();
                    $("#success").hide();
                    $("#error").hide();

                    if (data.State == 0) {
                        $("#success").show();
                        $("#error").hide();
                    }
                    else {
                        $("#error").show();
                        $("#success").hide();
                    }
                }
            });
        }
    </script>

}
