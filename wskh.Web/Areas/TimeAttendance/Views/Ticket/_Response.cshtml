@model TimeAttendance.Model.TicketModel
@{
    Layout = null;
}

@Html.AntiForgeryToken()

<div class="form-group w100">
    @Html.LabelFor(x => x.Title, new { @class = "pull-right" })<label class="required">*</label>
    @Html.DisplayFor(x => x.Title, new { @class = "form-control", MaxLength = "50" })
    @Html.ValidationMessageFor(x => x.Title, null, new { @class = "validation" })
</div>

<div class="form-group w100">
    @Html.LabelFor(x => x.Description, new { @class = "pull-right" })<label class="required">*</label>
    @Html.DisplayFor(x => x.Description, new { @class = "form-control", MaxLength = "500" })
    @Html.ValidationMessageFor(x => x.Description, null, new { @class = "validation" })
</div>

<div class="form-group w100">
    @Html.LabelFor(x => x.Response, new { @class = "pull-right" })<label class="required">*</label>
    @Html.TextBoxFor(x => x.Response, new { @class = "form-control", MaxLength = "500" })
    @Html.ValidationMessageFor(x => x.Response, null, new { @class = "validation" })
</div>





<button type="button" onclick="SubmitResponse(@(Model.Id))" class="btn btn-success btn-sm pull-left">پاسخ</button>
