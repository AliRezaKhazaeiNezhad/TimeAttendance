@{
    var model = (TimeAttendance.Model.CalendarModel)Session["calendarmodel"];
    Layout = null;
}





<div class="col-12">
    <div class="row">
        <div id="GetCalendare">

            <div id="InsertionPart" class="col-12">
                <div class="form-group col-md-3">
                    @Html.LabelFor(x => model.CalendarFormatModel.WorkProgramId, new { @class = "pull-right" })
                    @Html.DropDownListFor(x => model.CalendarFormatModel.WorkProgramId, model.CalendarFormatModel.WorkPrograms, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => model.CalendarFormatModel.WorkProgramId, null, new { @class = "validation" })
                </div>

                <div class="form-group col-md-2">
                    @Html.LabelFor(x => model.CalendarFormatModel.StartDateMonthId, new { @class = "pull-right" })
                    @Html.DropDownListFor(x => model.CalendarFormatModel.StartDateMonthId, model.CalendarFormatModel.StartDateMonths, new { @class = "form-control", onchange = "ChangeMonth(this, 'start')" })
                    @Html.ValidationMessageFor(x => model.CalendarFormatModel.StartDateMonthId, null, new { @class = "validation" })

                    @Html.LabelFor(x => model.CalendarFormatModel.StartDateDayId, new { @class = "pull-right" })
                    @Html.DropDownListFor(x => model.CalendarFormatModel.StartDateDayId, model.CalendarFormatModel.StartDateDays, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => model.CalendarFormatModel.StartDateDayId, null, new { @class = "validation" })
                </div>

                <div class="form-group col-md-2">
                    @Html.LabelFor(x => model.CalendarFormatModel.EndDateMonthId, new { @class = "pull-right" })
                    @Html.DropDownListFor(x => model.CalendarFormatModel.EndDateMonthId, model.CalendarFormatModel.EndDateMonths, new { @class = "form-control", onchange = "ChangeMonth(this, 'end')" })
                    @Html.ValidationMessageFor(x => model.CalendarFormatModel.EndDateMonthId, null, new { @class = "validation" })

                    @Html.LabelFor(x => model.CalendarFormatModel.EndDateDayId, new { @class = "pull-right" })
                    @Html.DropDownListFor(x => model.CalendarFormatModel.EndDateDayId, model.CalendarFormatModel.EndDateDays, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => model.CalendarFormatModel.EndDateDayId, null, new { @class = "validation" })
                </div>

                <div class="form-group col-md-1 w100">
                    <button onclick="AddRow()" type="button" class="btn btn-info lonlyBTN">درج</button>
                </div>

            </div>
            <br />

            <div id="CalendarePart" class="col-12">
                @Html.Action("GetCalendare")
            </div>


        </div>
    </div>
    <div class="row">
        <div class="pull-left col-12">
            <button type="submit" id="Submit" onclick="AddOrUpdate(@(model.Id))" class="btn btn-success pull-left"> ثبت/ویرایش </button>
        </div>
    </div>
</div>
