@model TimeAttendance.Model.TradeSearchModel
@{
    Layout = null;
}

@Html.AntiForgeryToken()




    <div class="row">
        <div class="form-group pull-right col-md-4">
            @Html.LabelFor(x => x.UserGroupId, new { @class = "pull-right" })
            @Html.DropDownListFor(x => x.UserGroupId, Model.UserGroupList, new { @class = "form-control", onchange = "SelectUsers()" })
            @Html.ValidationMessageFor(x => x.UserGroupId, null, new { @class = "validation" })
        </div>
        <div class="form-group pull-right col-md-4">
            @Html.LabelFor(x => x.UserId, new { @class = "pull-right" })
            <select class="form-control" id="UserId" name="UserId" autocomplete="off">
                @Html.Action("GetDrop", new { usergroupId = 0 })
            </select>

            @Html.ValidationMessageFor(x => x.UserId, null, new { @class = "validation" })
        </div>
        <div class="form-group pull-left col-md-2">
            <button type="button" onclick="Search()" id="submitBTN" class="btn btn-success btn-sm pull-left" style="position: relative;top: 38px;float: left;width:100%">جستجو</button>
        </div>
        <div class="form-group pull-left col-md-2">
            <button type="button" onclick="PrintPDF()" id="submitBTN" class="btn btn-default btn-sm pull-left" style="position: relative;top: 38px;float: left;width:100%">چاپ <i class="fa fa-copy"></i></button>
        </div>
    </div>



