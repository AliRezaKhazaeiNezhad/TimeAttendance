@{
    var _requestService = DependencyResolver.Current.GetService<wskh.Service.IRequestService>();

    var lastWeekList = _requestService.List();

    if (lastWeekList != null && lastWeekList.Count() > 0)
    {
        var dtNow = DateTime.Now;
        lastWeekList = lastWeekList
            .Where(x =>
                (dtNow.AddDays(-7).Date <= x.StartDate.Date && x.StartDate.Date <= dtNow.Date) &&
                (dtNow.AddDays(-7).Date <= x.EndDate.Date && x.EndDate.Date <= dtNow.Date))
            .ToList();
    }
}


