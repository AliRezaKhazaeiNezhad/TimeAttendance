                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>در انتظار بررسی</td>
                                    <td>
                                        @try
                                        {
                                            @(list.Where(x => x.Type == wskh.Core.Enumerator.RequestType.DailyRest && x.State == wskh.Core.Enumerator.RequestState.Pending).ToList().Count())
                                        }
