@{
    var _requestService = DependencyResolver.Current.GetService<wskh.Service.IRequestService>();

    var list = _requestService.List();

    if (list != null && list.Count() > 0)
    {
        list = list.Where(x => x.StartDate.Date == DateTime.Now.Date).ToList();
    }
}


