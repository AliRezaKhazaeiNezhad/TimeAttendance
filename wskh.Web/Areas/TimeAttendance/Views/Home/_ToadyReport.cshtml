                            <thead>
                                <tr>
                                    <th style="width:20%">
                                        وضعیت
                                    </th>
                                    <th style="width:20%">
                                        مرخصی روزانه
                                    </th>
                                    <th style="width:20%">
                                        مرخصی ساعتی
                                    </th>
                                    <th style="width:20%">
