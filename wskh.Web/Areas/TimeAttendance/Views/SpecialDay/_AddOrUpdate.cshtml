@model TimeAttendance.Model.SpecialDayModel
@{
    Layout = null;
}
<link href="~/wwwroot/componenets/persiancalendar/js-persian-cal.css" rel="stylesheet" />

@Html.AntiForgeryToken()
@Html.HiddenFor(x => x.Id)

<div class="form-group col-12">
    @Html.LabelFor(x => x.SpecialDayGroupingId, new { @class = "pull-right" })<label class="required">*</label>
    @Html.DropDownListFor(x => x.SpecialDayGroupingId, Model.SpecialDayGroupings, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SpecialDayGroupingId, null, new { @class = "validation" })
</div>
<div class="form-group col-12">
    @Html.LabelFor(x => x.TypeId, new { @class = "pull-right" })<label class="required">*</label>
    @Html.DropDownListFor(x => x.TypeId, Model.TypeList, new { @class = "form-control", onchange = "ChangeHolidayType(this)" })
    @Html.ValidationMessageFor(x => x.TypeId, null, new { @class = "validation" })
</div>

